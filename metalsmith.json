{
    "metadata": {
        "title": "RT狂の思考ログ",
        "description": "Just my own blog.",
        "author": "wkwkrnht"
    },
    "plugins": {
        "metalsmith-author": {
            "collection": "posts",
            "authors": {
                "wkwkrnht": {
                    "name": "wkwkrnht",
                    "url": "http://wkwkrnht.wp.xdomain.jp",
                    "twitter": "@wkwkrnht"
                }
            }
        },
        "metalsmith-sitemap": {
            "hostname": "https://wkwkrnht-blog.netlify.com"
        },
        "metalsmith-clean-css": {
            "files": "template/**/*.css"
        },
        "metalsmith-collections": {
            "collections":{
                "posts": "*.html"
            }
        },
        "metalsmith-permalinks": {
            "pattern": "posts/:title"
        },
        "metalsmith-collections": {
            "posts": {
                "pattern":"posts/*.md"
            }
        },
        "metalsmith-templates": {
            "engine": "handlebars"
        },
        "metalsmith-archive": {},
        "metalsmith-lunr": {},
        "metalsmith-inline-source": {},
        "metalsmith-markdown": {},
        "metalsmith-autoprefixer": {}
    }
}