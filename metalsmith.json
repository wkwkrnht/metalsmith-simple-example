{
    "metadata": {
        "title": "RT狂の思考ログ",
        "description": "Just my own blog.",
        "author": "wkwkrnht"
    },
    "plugins": {
        "metalsmith-autoprefixer": {},
        "metalsmith-clean-css": {
            "files": "template/**/*.css"
        },
        "metalsmith-inline-source": {},
        "metalsmith-permalinks": {
            "pattern": "posts/:title"
        },
        "metalsmith-collections": {
            "posts": {
                "pattern":"posts/*.md"
            }
        },
        "metalsmith-templates": {
            "engine": "handlebars"
        },
        "metalsmith-excerptor": {
            "maxLength": 100,
            "keepImageTag": false,
            "ellipsis": "…"
        },
        "metalsmith-validate": [
            {
                "pattern": "posts/*",
                "metadata": {
                    "title": {
                        "exists": true,
                        "type": "String"
                    },
                    "tag": {
                        "default": "uncategorized"
                    },
                    "draft": {
                        "exists": false
                    }
                }
            }
        ],
        "metalsmith-author": {
            "collection": "posts",
            "authors": {
                "wkwkrnht": {
                    "name": "wkwkrnht",
                    "url": "http://wkwkrnht.wp.xdomain.jp",
                    "twitter": "@wkwkrnht"
                }
            }
        },
        "metalsmith-series": {
            "series": {
                "awesome-serie": {
                    "title": "This is an awesome serie I made !"
                }
            },
            "serieNameProperty": "nameoftheserie",
            "sortByProperty": "pubdate",
            "reverse": true
        },
        "metalsmith-tags": {
            "handle": "tags",
            "path": "tags/:tag.html",
            "layout": "template/partials/tags.hbt",
            "sortBy": "date",
            "reverse": true,
            "skipMetadata": false,
            "slug": {
                "mode": "rfc3986"
            }
        },
        "metalsmith-robots": {
            "useragent": "googlebot",
            "allow": ["index.html", "about.html"],
            "disallow": ["404.html"],
            "sitemap": "https://wkwkrnht-blog.netlify.com/sitemap.xml"
        },
        "metalsmith-sitemap": {
            "hostname": "https://wkwkrnht-blog.netlify.com"
        },
        "metalsmith-archive": {},
        "metalsmith-lunr": {},
        "metalsmith-markdown": {}
    }
}