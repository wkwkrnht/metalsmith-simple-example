{
    "@context": "http://schema.org",
    "@type": "WebSite",
    "name":"{{ sitetitle }}",
    "description": "{{ description }}",
    "url": "{{ siteurl }}",
    "inLanguage": "{{ language }}",
    "publisher":{
        "@type":"Organization",
        "name":"{{ author }}",
        "logo":{
            "@type": "ImageObject",
            "url": "{{ metaImage}}",
            "width":60,
            "height":60
        }
    },
    "copyrightYear": "{{ startyear }}",
    "copyrightHolder": {
        "@type": "Organization",
        "name": "{{ author }}"
    },
    "potentialAction": {
        "@type": "SearchAction",
        "target": "{{ siteurl }}?s={search_term}",
        "query-input": "required name=search_term"
    }
}